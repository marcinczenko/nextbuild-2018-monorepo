{
  "name": "nextbuild-2018-monorepo",
  "version": "1.0.0",
  "description": "A monorepo for nextbuild-2018",
  "main": "N/A",
  "author": "Marcin Czenko",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "workspaces/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "jest": "^23.6.0",
    "babel-eslint": "^10.0.1",
    "standard": "^12.0.1",
    "eslint": "5.6.0",
    "react-scripts": "^2.0.0"
  },
  "scripts": {
    "lint": "yarn standard",
    "lint-fix": "yarn standard --fix --verbose",
    "test": "yarn lint && NODE_PATH=./workspaces/demo-app/src yarn jest",
    "test:watch": "NODE_PATH=./workspaces/demo-app/src yarn jest --watch"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/umd/**",
      "**/es/**",
      "**/lib/**",
      "**/build/**"
    ],
    "envs": [
      "es6",
      "browser",
      "jest"
    ]
  },
  "jest": {
    "projects": [
      "workspaces/demo-app"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testURL": "http://localhost",
    "moduleNameMapper":{
      "\\.(jpg|gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
 }
  }
}
